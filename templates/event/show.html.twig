{% extends 'base.html.twig' %}
{% block title %}
    {{ parent() }}
    | Details
{% endblock %}

{% block body %}
    <div class="container">
        <br>
        <h2>Event Details</h2>

            <p><strong>Name:</strong> {{ event.name }}</p>
            <p><strong>Description:</strong> {{ event.description }}</p>
            <p><strong>Booked Seats:</strong> {{ event.bookedSeats }}</p>

        <div class="mt-4">

            <a href="{{ path('app_event_edit', {id: event.id}) }}" class="btn btn-outline-info me-3">EDIT</a>

            <a href="{{ path('app_event_delete', {id: event.id}) }}" type="button" class="btn btn-outline-danger">DELETE</a>
        </div>

    </div>
{% endblock %}
