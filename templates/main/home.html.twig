{% extends 'base.html.twig' %}

{% block body %}
    <div class="container text-center my-4">
        <h1>Welcome to BBQ!</h1>
{#        <p>Weâ€™re here to help you move forward.</p>#}
    </div>
{#    <hr class="border-primary border-2 ">#}

    <div id="opinion-container">
        <h4 class="mt-4">Your Opinion Matters</h4>
        <p>Vote for the event you find most interesting!</p>
{#        <p class="text-muted">See how many others share your interest.</p>#}
    </div>



    <div class="container my-4">
        <div class="row">
            {% if events|length > 0 %}
                {% for event in events %}
                    <div class="col-md-4 mb-4">
                        <div class="card" style="height: 250px; display: flex; flex-direction: column;">
                            <img src="{{ asset('img/' ~ event.id ~ '.jpg') }}" class="card-img-top" alt="" style="height: 150px; object-fit: cover;">
                            <div class="card-body text-center" style="flex-grow: 1; display: flex; flex-direction: column; justify-content: space-between;">
                                <h5 class="card-title" style="font-size: 16px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">{{ event.name }}</h5>
                                <div class="d-flex justify-content-between align-items-center mt-2">
                                <span style="font-size: 14px;">
                                    <i class="fas fa-heart text-danger"></i> {{ event.likes }}
                                </span>
                                    <form action="{{ path('app_event_like', { id: event.id }) }}" method="post">
                                        <button type="submit" class="btn btn-sm btn-info custom-btn">Like</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-muted text-center">No events available at the moment. Check back later!</p>
            {% endif %}
        </div>
    </div>

{% endblock %}
